#include <cstdlib>
#include <stdio.h>
#include <iostream>

using namespace std;

int InputA(){
    int a;
    printf("Nhap vao a: ");
    scanf("%d", &a);
    return a;
}

int InputB(){
    int b;
    printf("Nhap vao b: ");
    scanf("%d", &b);
    return b;
}

void PrintSum(int a, int b){
//void PrintSum(){
//    exit(1);
    printf("\nTong cua a+b = %d", (a+b) );
//     std::cout << "foo!";
}

int main(int argc, char** argv) {
    printf("Hello Word");
    int a, b;
    // 1. nhap vao a
    a = InputA();
    // 2. nhap vao b
    b = InputB();
    // 3. in ra tong cua a + b
    PrintSum(a, b);
    printf("\nEnd function");
    return 0;
//    
    

}

